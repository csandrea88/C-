        <form asp-controller='Home' asp-action='updtBelt3/@belt3.Belt3Id' method='post'>
            
            <label asp-for='Belt3stg1'>Belt3stg1:</label> 
            <input asp-for='Belt3stg1' type='text' name='Belt3stg1'>
            <span asp-validation-for='Belt3stg1'></span><br><br>
            
            <label asp-for='Belt3stg2'>Belt3stg2:</label> 
            <input asp-for='Belt3stg2' type='text' name='Belt3stg2'>
            <span asp-validation-for='Belt3stg2'></span><br><br>

            <label asp-for='Belt3stg3'>Belt3stg3:</label> 
            <input asp-for='Belt3stg3' type='text' name='Belt3stg3'>
