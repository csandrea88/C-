            <label asp-for='Belt3stg4'>Belt3stg4:</label> 
            <input asp-for='Belt3stg4' type='text' name='Belt3stg4'>
            <span asp-validation-for='Belt3stg4'></span><br><br>

            <label asp-for='Belt3stg5'>Belt3stg5:</label> 
