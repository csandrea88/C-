            <input asp-for='Belt3int1' type='number' name='Belt3int1'>
            <span asp-validation-for='Belt3int1'></span><br><br>
            
            <label asp-for='Belt3int2'>Belt3int2:</label> 
            <input asp-for='Belt3int2' type='number' name='Belt3int2'>
